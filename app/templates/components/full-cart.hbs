{{#if shoppingCart.items}}
  <h2>Your Shopping Cart:</h2>
  {{#each shoppingCart.items as |item|}}
    <h5>{{item.name}} - ${{item.price}}</h5>
  {{/each}}
  <h3>Total: ${{cartTotal}}</h3>
  <button class="waves-effect waves-light btn add-to-cart"><span class="glyphicon glyphicon-ok"></span> Checkout</button>
{{else}}
  <h2>Your shopping cart is empty :(</h2>
  <h2>Go buy some delicious foods and drinks!</h2>
{{/if}}
