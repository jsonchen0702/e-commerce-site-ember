<form>
  <h2>Add an Item</h2>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-6">
        <label for="new-item-field">Item Name:</label>
      </div>
      <div class="col-xs-6">
        {{input class="new-item-field" value=name id="name"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-6">
        <label for="new-item-field">Description:</label>
      </div>
      <div class="col-xs-6">
        {{textarea class="new-item-field" value=description id="description"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-6">
        <label for="new-item-field">Price:</label>
      </div>
      <div class="col-xs-6">
        {{input type="number" class="new-item-field" value=price id="price"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-6">
        <label for="new-item-field">Image:</label>
      </div>
      <div class="col-xs-6">
        {{input class="new-item-body" value=image id="image"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-6">
        <label for="new-item-field">Category:</label>
      </div>
      <div class="col-xs-6">
        {{input class="new-item-body" value=category id="category"}}
      </div>
    </div>
  </div>

  <button class="item-button" {{action 'saveItem'}}>Add Item</button>
</form>
