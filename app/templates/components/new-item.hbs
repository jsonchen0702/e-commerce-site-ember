<form>
  <h2 class="add-an-item-title">Add an Item</h2>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Item Name:</h5>
      </div>
      <div class="col-xs-8">
        {{input class="new-item-field" value=name id="name"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Description:</h5>
      </div>
      <div class="col-xs-8">
        {{textarea class="new-item-field" value=description id="description" class="materialize-textarea" length="120"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Price:</h5>
      </div>
      <div class="col-xs-8">
        {{input type="number" class="new-item-field" value=price id="price"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Image:</h5>
      </div>
      <div class="col-xs-8">
        {{input class="new-item-body" value=image id="image"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Category:</h5>
      </div>
      <div class="col-xs-8">
        {{input class="new-item-body" value=category id="category"}}
      </div>
    </div>
  </div>

  <button class="item-button waves-effect waves-light btn" {{action 'saveItem'}}>Add Item</button>
</form>
