<form>
  <h2>Add Feedback To This Item:</h2>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-6">
        <label for="new-item-field">Username:</label>
      </div>
      <div class="col-xs-6">
        {{input class="new-item-field" value=username id="username"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-6">
        <label for="new-item-field">Rating:</label>
      </div>
      <div class="col-xs-6">
        <div class="row">
          <span class="star-rating-selection" {{action "rateOneStar"}} id="rateOneStar">
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
          </span>
        </div>

        <div class="row">
          <span class="star-rating-selection" {{action "rateTwoStar"}} id="rateTwoStar">
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
          </span>
        </div>

        <div class="row">
          <span class="star-rating-selection" {{action "rateThreeStar"}} id="rateThreeStar">
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
          </span>
        </div>

        <div class="row">
          <span class="star-rating-selection" {{action "rateFourStar"}} id="rateFourStar">
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
          </span>
        </div>

        <div class="row">
          <span class="star-rating-selection" {{action "rateFiveStar"}} id="rateFiveStar">
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
          </span>
        </div>
        <!-- {{input type="number" class="new-item-field" value=rating id="rating"}} -->
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-6">
        <label for="new-item-field">Comment:</label>
      </div>
      <div class="col-xs-6">
        {{textarea class="new-item-field" value=comment id="comment"}}
      </div>
    </div>
  </div>

  <button class="item-button waves-effect waves-light btn" {{action 'saveFeedback'}}>Add Feedback</button>
</form>
